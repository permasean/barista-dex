{
  "name": "@barista-dex/cli",
  "version": "0.1.0",
  "description": "Command-line interface for Barista DEX",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "barista": "./bin/barista"
  },
  "scripts": {
